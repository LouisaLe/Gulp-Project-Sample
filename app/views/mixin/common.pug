mixin banner(img)
    .banner
        img(alt=img.alt,src=img.src)
        if(typeof(img.title) !== "undefined")
            .caption
                if(img.page=="color_trend_detail")
                    h1 #{img.title}
                    .h2-tag
                        p #{img.sub}
                else
                    h1 #{img.title}
                    if(typeof(img.sub) !== "undefined")
                        h2 #{img.sub}
