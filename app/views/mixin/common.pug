mixin link(title, href, text)
  -
    title = title ? title : text
    text = text ? text : title
    href = href ? href : '#'

  a(href=href, title=title, target="_blank")&attributes(attributes)
    if block
      block
    else
      !=text

mixin img(src, alt)
  -
    imgAlt = alt ? alt : ''
    imgSrc = src ? src : 'images/transparent.gif'

  img(src=imgSrc, alt=imgAlt)&attributes(attributes)

mixin iImg(src, alt)
  -
    imgAlt = alt ? alt : 'icon'
    imgSrc = src ? './images/icons/' + src : './images/transparent.gif'

  img(src=imgSrc, alt=imgAlt)&attributes(attributes)

mixin picture(images, alt)
  -
    imgAlt = alt ? alt : ''

  picture&attributes(attributes)
    source(srcset=images.mb media="(max-width: 750px)")
    img(src=images.ds, alt=imgAlt)

