include ../mixin/all

//-variable
block var
- var title = (typeof(title) === 'undefined' || title == "") ? "PPG" : title;
- var scriptpage;
- var subPage = (typeof(subPage) === 'undefined' || subPage == "") ? "" : subPage;
- var keyword = (typeof(keyword) === 'undefined' || keyword == "") ? "" : keyword;
- var description = (typeof(description) === 'undefined' || description == "") ? "" : description;
- var fbURL = (typeof(fbURL) === 'undefined' || fbURL == "") ? "" : fbURL;
- var fbImg = (typeof(fbImg) === 'undefined' || fbImg == "") ? "" : fbImg;

