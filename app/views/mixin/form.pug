mixin paintRadio(item)
    -
        id = Math.round(Math.random() * 10000)

    .paint-radio&attributes(attributes)
        input(id=id, type="radio", name=item.name, value=item.value, checked=item.checked, data-target=item.target).paint-radio__input
        label(for=id).paint-radio__label
            if item.text
                span.paint-radio__text!=item.text
            if block
                block

mixin customRadio(item)
    -
        id = Math.round(Math.random() * 10000)

    .custom-radio&attributes(attributes)
        input(id=id, type="radio", name=item.name, value=item.value, checked=item.checked).custom-radio__input
        label(for=id).custom-radio__label
            if item.text
                span.custom-radio__text=item.text
            if block
