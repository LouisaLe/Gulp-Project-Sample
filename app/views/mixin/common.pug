mixin breadcrum(items)
  ul.breadcrumb
    for item in items
      li
        if(typeof(item.href) !== "undefined")
          a(href=item.href,title=item.title,target="_blank") #{item.title}
        else
          span #{item.title}
mixin product-item(items)
  for item in items
    article.product-item(data-id="1",data-type="product")
      .img
        img(alt=item.name,src=item.image,title=item.name)
      .name
        h4.title: a(href=item.link,title=item.name,target="_blank") #{item.name}
        h5.title: a(href=item.link,title=item.nameEN,target="_blank") #{item.nameEN}
      if(typeof(item.flag) !== "undefined")
        .flag
          p #{item.flag}
      .info
        h4.title #{item.name}
        h5.title #{item.nameEN}
        .desc
          p #{item.desc}
        .cta-row
          a.hidden-phone.btn.btn-third(href=item.link,title=item.name,target="_blank",tabindex="-1") 了解更多
          a.btn.btn-ico.btn-fav(href='javascript:;',title='添加到收藏夹',tabindex="-1",data-id="1",data-type="product"): span.ico.ico-fav
